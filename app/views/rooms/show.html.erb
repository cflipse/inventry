<main class="grid grid-cols-2">
  <div>
    <% @locations.each do |location| %>
      <article class='border-2 rounded-xl mb-8 font-serif'>
        <header class='rounded-t-xl bg-grey-200 px-3 py-2'>
          <%= location.name %>
        </header>

        <%= render CategoryCountComponent.new packages: location.packages %>
      </article>
    <% end %>
  </div>
</main>
