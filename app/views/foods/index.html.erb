<header class='mb-2 border-b-2 border-teal-300'>
  <h2>In Stock</h2>
</header>


<main class="grid grid-cols-2">

  <div>
    <% @foods.group_by(&:category).each do |category, foods| %>
      <article class='border-2 rounded-xl mb-4'>
        <header class='rounded-t-xl bg-grey-200 px-2 text-xl'>
          <%= category %>
        </header>

        <ul class='px-2'>
          <% foods.each do |food| %>
            <li>
              <%= food.name %>
              <span class="rounded-full text-teal-800 bg-teal-200 px-2 inline-block text-xs">
                <%= @counts[food.id] %>
              </span>
            </li>
          <% end %>

      </article>
    <% end %>

  </div>
</main>
