<header class="mb-2 capitalize border-b-2 border-teal-300">
  <h2>Add new packages</h2>
</header>


<%= form_with model: @package, class: "max-w-sm" do |form| %>

  <div class='mt-4'>
    <%= form.label :location_id, class: 'form-label' %>

    <%= form.select :location_id,
      grouped_options_for_select(grouped_room_options, form.object.location_id),
      { prompt: true }, { class: 'w-full rounded' } %>
  </div>

  <div class='mt-4'>
    <%= form.label :food_id, class: 'form-label' %>


    <%= form.select :food_id,
      grouped_options_for_select(grouped_food_options, form.object.food_id),
      { prompt: true }, { class: 'w-full rounded' } %>
  </div>

  <div class='mt-4'>
    <%= form.label :producer, class: 'form-label' %>
    <%= form.text_field :producer, class: 'w-full rounded'  %>
  </div>

  <div class='mt-4'>
    <%= form.label :store, class: 'form-label' %>
    <%= form.text_field :store, placeholder: "where'd we get it", class: 'w-full rounded' %>
  </div>

  <div class='mt-4'>
    <%= form.label :quantity, class: 'form-label' %>
    <%= form.text_field :quantity, placeholder: "how much is there", class: 'w-full rounded' %>
  </div>

  <div class='mt-4'>
    <%= form.label :notes, class: 'form-label' %>
    <%= form.text_area :notes, class: 'w-full rounded' %>
  </div>

  <div class='mt-4'>
    <%= form.submit "Store package", class: "btn btn-teal text-sm shadow" %>
    <%= link_to "Cancel", root_path, class: "ml-2 btn btn-grey text-sm" %>
  </div>


<% end %>
